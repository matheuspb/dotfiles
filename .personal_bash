alias ll='ls -l'
alias la='ls -A'
alias lla='ls -lA'

alias mv='mv -i' # prompt if overwriting

function cs () { cd "$@" && ls; }

alias bye='sudo shutdown 0'

# prompt
PS1='\W$(__git_ps1) $ '

